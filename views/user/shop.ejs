        <!-- Fruits Shop Start-->
        <div class="container-fluid fruite py-1">
            <div class="container py-5">
                <h1 class="mb-4">Fresh fruits shop</h1>
                <div class="row g-4">
                    <div class="col-lg-12">
                        <div class="row g-4">
                            <div class="col-xl-3">
                                <form action="/shop" method="GET" class="w-100 mx-auto d-flex">
                                    <input type="search" name="query" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1" required>
                                    <span id="search-icon-1" class="input-group-text p-3">
                                        <button type="submit" class="btn btn-link p-0"><i class="fa fa-search"></i></button>
                                    </span>
                                </form>
                            </div>
                            <div class="col-6"></div>
                            <div class="col-xl-3">
                                <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between align-items-center mb-4 custom-dropdown">
                                    <label for="fruits" class="mb-0">Sort By:</label>
                                    <div class="dropdown me-3">
                                        <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                            <% if (sortOption === 'priceLowHigh') { %>
                                                Price: Low to High
                                            <% } else if (sortOption === 'priceHighLow') { %>
                                                Price: High to Low
                                            <% } else if (sortOption === 'aToZ') { %>
                                                A to Z
                                            <% } else if (sortOption === 'zToA') { %>
                                                Z to A
                                            <% } else { %>
                                                Default
                                            <% } %>
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li><a class="dropdown-item <%= sortOption === 'default' ? 'active' : '' %>" href="?sort=default">Default</a></li>
                                            <li><a class="dropdown-item <%= sortOption === 'priceLowHigh' ? 'active' : '' %>" href="?sort=priceLowHigh">Price: Low to High</a></li>
                                            <li><a class="dropdown-item <%= sortOption === 'priceHighLow' ? 'active' : '' %>" href="?sort=priceHighLow">Price: High to Low</a></li>
                                            <li><a class="dropdown-item <%= sortOption === 'aToZ' ? 'active' : '' %>" href="?sort=aToZ">A to Z</a></li>
                                            <li><a class="dropdown-item <%= sortOption === 'zToA' ? 'active' : '' %>" href="?sort=zToA">Z to A</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                          
                        </div>
                        <div class="row g-4">
                            <div class="col-lg-3">
                                <div class="row g-4">
                                    
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <h4>Categories</h4>
                                            <ul class="list-unstyled fruite-categorie">
                                                <!-- "All Products" Button -->
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="?sort=<%= sortOption %>" class="<%= !selectedCategoryId ? 'fw-bold text-primary' : '' %>">
                                                            <i class="fas fa-th-large me-2"></i> All Products
                                                        </a>
                                                    </div>
                                                </li>
                                            
                                                <!-- Loop through categories -->
                                                <% categories.forEach(category => { %>
                                                    <li>
                                                        <div class="d-flex justify-content-between fruite-name">
                                                            <!-- Category link, keeping the current sort option -->
                                                            <a href="?category=<%= category._id %>&sort=<%= sortOption %>" 
                                                               class="<%= selectedCategoryId === category._id.toString() ? 'fw-bold text-primary' : '' %>">
                                                                <i class="fas fa-apple-alt me-2"></i> <%= category.name %>
                                                            </a>
                                                            <span>(<%= category.productCount %>)</span>
                                                        </div>
                                                    </li>
                                                <% }) %>
                                            </ul>
                                        </div>
                                    </div>

                                    
                                  
                                    <div class="col-lg-12">
                                        <div class="position-relative">
                                            <img src="/User/img/banner-fruits.jpg" class="img-fluid w-100 rounded" alt="">
                                            <div class="position-absolute" style="top: 50%; right: 10px; transform: translateY(-50%);">
                                                <h3 class="text-secondary fw-bold">Fresh <br> Fruits <br> Banner</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Content Area -->
                            <div class="col-lg-9">
                                <div class="row g-4 justify-content-center">
                                    <% products.forEach((product, index) => { %> <!-- Include index to refer to greatestDiscounts array -->
                                        <div class="col-md-6 col-lg-6 col-xl-4">
                                            <div class="rounded position-relative fruite-item">
                                                <div class="fruite-img">
                                                    <a href="/product/<%= product._id %>">
                                                        <img src="/images/<%= product.images[0] %>" class="img-fluid w-100 rounded-top" alt="<%= product.name %>">
                                                    </a>
                                                    <% if (greatestDiscounts[index] > 0) { %> <!-- Display the greatest discount -->
                                                        <div class="discount-overlay">
                                                            OFF <%= greatestDiscounts[index] %>% <!-- Use the greatestDiscounts array -->
                                                        </div>
                                                    <% } %>
                                                </div>
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">
                                                    <%= product.category.name %>
                                                </div>
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <h4><%= product.name %></h4>
                                                    <div class=" p-1">
                                                        <% if (greatestDiscounts[index] > 0) { %> <!-- Use the greatestDiscounts array -->
                                                            <div class="d-flex" style="flex-direction: row; justify-content: space-between;">
                                                                <p class="text-success fs-5 fw-bold mb-0" style="">
                                                                    ₹<%= Math.floor(product.price - (product.price * (greatestDiscounts[index] / 100))) %> / <%= product.unit %>
                                                                </p>
                                                                <p class="text-dark fs-5 fw-bold mb-0">
                                                                    <span style="text-decoration: line-through; color: red;">₹<%= product.price %> / <%= product.unit %></span>
                                                                </p>
                                                            </div>
                                                        <% } else { %>
                                                            <p class="text-dark fs-5 fw-bold mb-0"> ₹<%= product.price %> / <%= product.unit %></p>
                                                        <% } %>
                                                    </div>
                                                    <div class="d-flex">
                                                        <% if (product.stock > 0) { %>
                                                            <!-- Add to Cart Button -->
                                                            <a onclick="addToCart('<%= product._id %>', 1)" class="btn border border-secondary rounded-pill px-2 text-primary me-2">
                                                                <i class="fa fa-shopping-bag me-1 text-primary"></i> Add to cart
                                                            </a>
                                                        <% } else { %>
                                                            <!-- Out of Stock Message -->
                                                            <span style="color: red; margin-right: 20px; margin-top: 8px; font-weight: 600;">Out of Stock</span>
                                                        <% } %>
                                                        <!-- Wishlist Button -->
                                                        <a onclick="addToWishlist('<%= product._id %>')" class="btn border border-secondary rounded-pill px-2 text-danger">
                                                            <i class="fa fa-heart me-1 text-danger"></i> Wishlist
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                                    <!-- Content area end -->
                                    <div class="col-12">
                                        <div class="pagination d-flex justify-content-center mt-5">
                                            <a href="?page=<%= currentPage - 1 %>&sort=<%= sortOption %>&category=<%= selectedCategoryId %>" class="rounded <%= currentPage === 1 ? 'disabled' : '' %>">&laquo;</a>
                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                                <a href="?page=<%= i %>&sort=<%= sortOption %>&category=<%= selectedCategoryId %>" class="rounded <%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                                            <% } %>
                                            <a href="?page=<%= currentPage + 1 %>&sort=<%= sortOption %>&category=<%= selectedCategoryId %>" class="rounded <%= currentPage === totalPages ? 'disabled' : '' %>">&raquo;</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
