        <div class="container-fluid py-5">
            <div class="container py-5">
                <div class="table-responsive">
                    <table class="table table-stylish">
                        <thead>
                            <tr>
                                <th scope="col">Products</th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                                <th scope="col">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (cartItems.length > 0) { %>
                                <% cartItems.forEach((item, index) => { %>
                                    <tr class="cart-item">
                                        <th scope="row">
                                            <div class="d-flex align-items-center">
                                                <img src="/images/<%= item.product.images[0] %>" class="img-fluid me-5 rounded-circle product-img" alt="Product Image">
                                            </div>
                                        </th>
                                        <td>
                                            <p class="mb-0 mt-4 item-name"><%= item.product.name %></p>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4 item-price">
                                                <% if (greatestDiscounts[index] > 0) { %>
                                                    <!-- Show discounted price if discount exists -->
                                                    <span class="text-success fw-bold">
                                                        ₹<%= (item.product.price - (item.product.price * (greatestDiscounts[index] / 100))).toFixed(2) %>
                                                    </span>
                                                    <!-- Strike-through original price -->
                                                    <span class="text-muted text-decoration-line-through">
                                                        ₹<%= item.product.price %>
                                                    </span>
                                                <% } else { %>
                                                    <!-- Show original price if no discount -->
                                                    ₹<%= item.product.price.toFixed(2) %>
                                                <% } %>
                                            </p>
                                        </td>
                                        <td>
                                            <div class="input-group quantity mt-4" style="width: 100px;">
                                                <div class="input-group-btn">
                                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border update-quantity" 
                                                        onclick="updateQuantity('<%= item.product._id %>', 'decrease', '<%= item.product.price %>')">
                                                        <i class="fa fa-minus"></i>
                                                    </button>
                                                </div>
                                                <input type="text" 
                                                disabled
                                                       class="form-control form-control-sm text-center border-0" 
                                                       value="<%= item.quantity %>" 
                                                       id="quantity-input-<%= item.product._id %>">
                                                <div class="input-group-btn">
                                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border update-quantity" 
                                                        onclick="updateQuantity('<%= item.product._id %>', 'increase', '<%= item.product.price %>')">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4 item-total" id="total-price-<%= item.product._id %>">
                                                <% if (greatestDiscounts[index] > 0) { %>
                                                    <!-- Calculate total using discounted price if discount exists -->
                                                    ₹<%= (Math.floor((item.product.price - (item.product.price * (greatestDiscounts[index] / 100))) * item.quantity)).toFixed(2) %>
                                                <% } else { %>
                                                    <!-- Calculate total using original price -->
                                                    ₹<%= (item.product.price * item.quantity).toFixed(2) %>
                                                <% } %>
                                            </p>
                                        </td>
                                        <td>
                                            <button class="btn btn-md rounded-circle bg-light border mt-4 remove-btn" onclick="removeFromCart('<%= item.product._id %>')">
                                                <i class="fa fa-times text-danger"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center py-5">
                                        <p>Your cart is currently empty.</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                
                <% if (cartItems.length > 0) { %> <!-- Show only if cartItems exist -->
                <div class="row g-4 justify-content-end">
                    <div class="col-8"></div>
                    <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                        <div class="bg-light rounded">
                            <div class="p-4">
