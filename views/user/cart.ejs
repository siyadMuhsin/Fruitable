<script>
  function updateQuantity(productId, action, price) {
    const quantityInput = document.getElementById(`quantity-input-${productId}`);
    let quantity = parseInt(quantityInput.value);

    // Define the static maximum quantity
    const maxQuantity = 5;

    // Increase the quantity, but limit it to the maxQuantity
    if (action === 'increase' && quantity < maxQuantity) {
        quantity++;
    } else if (action === 'increase' && quantity >= maxQuantity) {
        Swal.fire({
            icon: 'warning',
            title: 'Maximum Limit Reached',
            text: `You cannot add more than ${maxQuantity} items of this product.`,
            confirmButtonText: 'OK'
        });
        return;
    }

    // Decrease the quantity, ensuring it doesn't go below 1
    if (action === 'decrease' && quantity > 1) {
        quantity--;
    } else if (action === 'decrease' && quantity <= 1) {
        Swal.fire({
            icon: 'warning',
            title: 'Minimum Quantity',
            text: 'You cannot have less than 1 item in your cart.',
            confirmButtonText: 'OK'
        });
        return;
    }

    // Update the input value
    quantityInput.value = quantity;

    // Send the updated quantity to the server using Axios
    axios.patch('/cart/update-quantity', {
        productId: productId,
        quantity: quantity
    })
    .then((response) => {
        if (response.data.success) {
            // Calculate the new total for this item
            const itemTotal = (price * quantity).toFixed(2);
            document.getElementById(`total-price-${productId}`).textContent = `${itemTotal} $`;
           

            // Update the subtotal and total cart value
            updateCartTotal();  // Call updateCartTotal to recalculate the totals
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: response.data.message || 'Failed to update the cart',
                confirmButtonText: 'OK'
            }).then(()=>{
                location.reload()

            })
            
        }
    })
    .catch((error) => {
        console.error('Error updating the quantity:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Failed to update the cart. Please try again.',
            confirmButtonText: 'OK'
        });
    });
}


function updateCartTotal() {
    const cartItems = document.querySelectorAll('.cart-item');  // Select all cart items
    let subtotal = 0;

    // Loop through each cart item to calculate the subtotal
    cartItems.forEach(item => {
        // Get original and discounted prices
        const originalPriceElement = item.querySelector('.item-price .text-muted'); // Original price (if present)
        const discountedPriceElement = item.querySelector('.item-price .text-success'); // Discounted price (if present)
        
        let itemPrice = 0;
        
        if (discountedPriceElement) {
            // If there's a discounted price, use that
            itemPrice = parseFloat(discountedPriceElement.textContent.replace('₹', ''));
        } else {
            // Otherwise, use the original price
            itemPrice = parseFloat(item.querySelector('.item-price').textContent.replace('₹', ''));
        }

        const quantity = parseInt(item.querySelector('input').value); // Get quantity
        const itemTotal = Math.floor(itemPrice * quantity); // Calculate item total
        subtotal += itemTotal; // Add to subtotal

        // Update the item's total price in the DOM
        const totalPriceElement = item.querySelector('.item-total');
        if (totalPriceElement) {
            totalPriceElement.textContent = `₹${itemTotal.toFixed(2)}`; // Update the item total in the DOM
        }
    });

    // Update the subtotal in the DOM
    const subtotalElement = document.getElementById('cart-subtotal');
    if (subtotalElement) {
        subtotalElement.textContent = `₹${subtotal.toFixed(2)}`;  // Update subtotal
    }

    // Calculate total (subtotal + shipping)
    const shipping = subtotal > 500 ? 0 : 40;  // Free shipping for orders above 500
    const total = subtotal + shipping;

    // Update the total in the DOM
    const totalElement = document.getElementById('cart-total');
    if (totalElement) {
        totalElement.textContent = `₹${total.toFixed(2)}`;  // Update total cart value
    }
}
</script>


<script>
    function removeFromCart(productId){
        Swal.fire({
        title: 'Are you sure?',
        text: "Do you want to remove this item from your cart?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, remove it!'
        }).then((result) => {
        if (result.isConfirmed) {
            // If confirmed, send the request to remove the item
            axios.post('/cart/remove', { productId: productId })
                .then(response => {
                    if (response.data.success) {
                        // SweetAlert success message
                        Swal.fire({
                            title: 'Removed!',
                            text: 'The item has been removed from your cart.',
                            icon: 'success',
                            showConfirmButton: false,
                        timer: 1500
                        }).then(() => {
                            // Reload the page after success
                            window.location.reload();
                        });
                    } else {
                        // SweetAlert error message if there was an issue
                        Swal.fire({
                            title: 'Error!',
                            text: response.data.message,
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error removing item from cart:', error);
                    Swal.fire({
                        title: 'Error!',
                        text: 'Should be want login or signup.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                });
        }
    });
    }
</script>
        

