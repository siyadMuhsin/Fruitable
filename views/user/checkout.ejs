<script>
function placeOrder() {
    // Get selected address and payment method
    const selectedAddress = document.querySelector('input[name="address"]:checked').value;
    const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;

    const orderData = {
        addressId: selectedAddress,
        paymentMethod: selectedPaymentMethod,
    };

    // Confirmation alert before placing the order
    Swal.fire({
        title: 'Are you sure?',
        text: "Do you want to place this order?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, place order!'
    }).then((result) => {
        if (result.isConfirmed) {
            // If confirmed, proceed with placing the order
            axios.post('/placed_order', { orderData })
                .then((response) => {
                    // Success alert when order is placed successfully
                    if(response.data.success){
                        Swal.fire({
                        title: 'Success!',
                        text: 'Your order has been placed successfully.',
                        icon: 'success',
                        showConfirmButton: false, 
                        timer: 1000 
                    }).then(() => {
                        // Optionally redirect to another page or refresh the page
                        window.location.href = '/order/placed'; // Redirect to the orders page
                    });

                    }else{
                        Swal.fire({
                            title: 'Error!',
                            text: response.data.message,
                            icon: 'error',
                            showConfirmButton: false,
                            timer: 1500
                        });

                    }
                    
                })
                .catch((error) => {
                    // Error alert if something goes wrong
                    Swal.fire({
                        title: 'Error!',
                        text: 'Something went wrong while placing your order. Please try again.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                    console.error('Error placing order:', error);
                });
        }
    });
}

</script>
        
