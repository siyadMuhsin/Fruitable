document.getElementById('applyCouponBtn').addEventListener('click', function() {
    const couponInput = document.getElementById('couponInput').value.trim();
    const selectedCoupon = document.getElementById('couponSelect').selectedOptions[0];
    const cartTotal = parseFloat(document.getElementById('subtotal').innerText.replace('₹', ''));
    const shippingCost = deleveryCharge;
    let errorMessage = '';
    document.getElementById('error-message').style.display = 'none';
    
    if (couponInput) {
        const coupon = Array.from(document.querySelectorAll('#couponSelect option')).find(opt => opt.value === couponInput);
        if (!coupon) {
            errorMessage = 'Invalid coupon code. Please try again.';
        } else {
            const couponMinPrice = parseFloat(coupon.dataset.minPrice);
            const couponDiscount = parseFloat(coupon.dataset.discount);
            if (cartTotal < couponMinPrice) {
                errorMessage = `Coupon requires a minimum cart amount of ₹${couponMinPrice.toFixed(2)}.`;
            } else {
                discount = (couponDiscount / 100) * cartTotal; 
                discount = Math.floor(discount);
                document.getElementById('applyCouponBtn').style.display = 'none'; // Hide Apply button
                document.getElementById('couponSelect').style.display = 'none'; // Hide dropdown
                document.getElementById('cancelCouponBtn').style.display = 'block'; // Show Cancel button
                document.getElementById('discountField').style.display= 'flex';
            }
        }
    }
    if (errorMessage) {
        document.getElementById('error-message').innerText = errorMessage;
        document.getElementById('error-message').style.display = 'block';
    } else {
        let totalPrice = cartTotal - discount + shippingCost;
        totalPrice = Math.ceil(totalPrice);
