%>
        <!-- Featurs End -->


       


       
        <!-- Banner Section End -->


        <!-- Bestsaler Product Start -->
        <div class="container-fluid py-5">
            <div class="container py-5">
                <div class="text-center mx-auto mb-5" style="max-width: 700px;">
                    <h1 class="display-4">Bestseller Products</h1>
                    <p>Latin words, combined with a handful of model sentence structures, to generate Lorem Ipsum which looks reasonable.</p>
                </div>
                <div class="row g-4">
                    <% products.slice(0, 6).forEach(product => { %> <!-- Display only the first 6 products -->
                        <div class="col-lg-6 col-xl-4">
                            <div class="p-4 rounded bg-light">
                                <div class="row align-items-center">
                                    <div class="col-6">
                                        <img src="/images/<%= product.images[0] %>" class="img-fluid rounded-circle w-100" alt="<%= product.name %>"> <!-- Display product image -->
                                    </div>
                                    <div class="col-6">
                                        <a href="#" class="h5"><%= product.name %></a> <!-- Display product name -->
                                        <div class="d-flex my-3"> <!-- Static rating -->
                                            <i class="fas fa-star text-primary"></i>
                                            <i class="fas fa-star text-primary"></i>
                                            <i class="fas fa-star text-primary"></i>
                                            <i class="fas fa-star text-primary"></i>
                                            <i class="fas fa-star"></i> <!-- Total of 4 stars out of 5 -->
                                        </div>
                                        <h4 class="mb-3"><%= product.price %> ₹</h4> <!-- Display price in Indian Rupees -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
        <!-- Bestsaler Product End -->

        
